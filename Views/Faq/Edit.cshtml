@model FAQ.ViewModel.FaqUpdateViewModel

@{
    ViewBag.Title = "question";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <div class="card-title"> Update FAQ</div>
    </div>
    <form asp-action="Edit" asp-controller="Faq" method="post">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Question"></label>
                <input class="form-control" asp-for="Question"/>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer"></label>
                <textarea class="form-control" asp-for="Answer" rows="4"></textarea>
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-info btn-sm" type="submit"><i class="fas fa-save"></i> Save</button>
        </div>
    </form>
</div>